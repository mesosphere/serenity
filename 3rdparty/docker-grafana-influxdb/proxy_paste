RUN echo 'Acquire::http { Proxy "http://proxy-chain.intel.com:911/"; };' >>/etc/apt/apt.conf.d/01proxy

ENV HTTP_PROXY=http://proxy-chain.intel.com:911
ENV http_proxy=http://proxy-chain.intel.com:911
ENV HTTPS_PROXY=https://proxy-chain.intel.com:911
ENV https_proxy=https://proxy-chain.intel.com:911
ENV FTP_PROXY=http://proxy-chain.intel.com:911
ENV ftp_proxy=http://proxy-chain.intel.com:911
ENV NO_PROXY="localhost,172.28.38.23,127.0.0.1,192.168.122.1,10.0.2.15,*.example.com,*.intel.com,.intel.com,::1,ip6-loopback,/var/run/docker.sock"

ENV no_proxy="localhost,172.28.38.23,127.0.0.1,192.168.122.1,10.0.2.15,*.example.com,*.intel.com,.intel.com,::1,ip6-loopback,/var/run/docker.sock"
